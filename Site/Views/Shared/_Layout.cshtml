<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All you need...</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("TenFingers", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    <li>@Html.ActionLink("Me", "About", "Home")</li>
                    <li>@Html.ActionLink("Employment History", "EmploymentHistory", "Home")</li>
                    <li>@Html.ActionLink("Education", "UnderConstruction", "Home")</li>
                    <li>@Html.ActionLink("Technical Summary", "UnderConstruction", "Home")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            See What I Can Do! <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                            <li>@Html.ActionLink("Items", "Index", "Item")</li>
                            <li>@Html.ActionLink("SSETest", "SSETest", "Home")</li>
                            <li>@Html.ActionLink("Facebook Friends", "Friends", "Home")</li>
                            <li>@Html.ActionLink("NodeJSSocketIO", "NodeJSSocketIO", "Home")</li>
                            <li>@Html.ActionLink("ReadWriteCache", "ReadWriteCache", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            @*<li>@Html.ActionLink("Matrix Games", "Matrix", "Home")</li>*@
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <div class="footer-wrapper">
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Guy Halperin</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/generalScripts")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
